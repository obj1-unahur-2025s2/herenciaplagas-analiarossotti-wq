import plagas.*
/***Requerimientos**  
- obtener el _nivel de daño_ de una plaga cualquiera.
- saber si una plaga _transmite enfermedades_ o no.*/


// 2. Instancia de PlagaDeCucarachas
// Necesita valores para 'poblacion' (heredado) y 'pesoPromedio' (propio)
//Poblacion, corresponde a la clase Padre, PesoPromedio a la clase PlagaDeCucarachas
const cucarachasPoderosas = new PlagaDeCucarachas(poblacion = 15, pesoPromedio = 12)
const cucarachasPequenas = new PlagaDeCucarachas(poblacion = 8, pesoPromedio = 5)

describe "Test Cucas" {
  test "Cucarachas Poderosas" {
    assert.equals(7.5, cucarachasPoderosas.nivelDeDaño())
    assert.that(cucarachasPoderosas.transmiteEnfermedad())
  }

  test "Cucarachas Pequeñas" {
    assert.equals(0, cucarachasPequenas.nivelDeDaño())
    assert.notThat(cucarachasPequenas.transmiteEnfermedad())
  }
}

// 3. Instancia de PlagaDePulgas
