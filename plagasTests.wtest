// 5. Instancia de PlagaDeMosquitos
// Necesita un valor para 'poblacion' (heredado)
const mosquitosConEnfermedad = new PlagaDeMosquitos(poblacion = 30) // 30 es divisible por 3
const mosquitosSinEnfermedad = new PlagaDeMosquitos(poblacion = 20) // 20 no es divisible por 3

describe "Test Mosquitos" {
  test "mosquitosConEnfermedad" {
    assert.equals(30, mosquitosConEnfermedad.nivelDeDaño())
    assert.that(mosquitosConEnfermedad.transmiteEnfermedad())
  }

  test "mosquitosSinEnfermedad" {
    assert.equals(20, mosquitosSinEnfermedad.nivelDeDaño())
    assert.notThat(mosquitosSinEnfermedad.transmiteEnfermedad())
  }
}